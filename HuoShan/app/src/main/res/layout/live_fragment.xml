<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="7%w">
        <TextView
            android:id="@+id/big_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="大图"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/small_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="小图"
            android:gravity="center"
            />


    </LinearLayout>
    <com.youth.banner.Banner
        android:id="@+id/l_banner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="35%w"
        />
    <ViewFlipper
        android:id="@+id/flipper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="10%w"
        android:background="@android:color/white"
        android:autoStart="true"
        android:flipInterval="3000"
        android:inAnimation="@anim/push_up_in"
        android:outAnimation="@anim/push_up_out"></ViewFlipper>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="2%w"
        android:background="@color/ashen"
        ></View>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/l_switch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/l_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>
</com.zhy.android.percent.support.PercentLinearLayout>
