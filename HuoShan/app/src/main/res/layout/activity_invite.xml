<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.huoshan.api.huoshan.mine.InviteActivity">
    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/acin_back"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/a4o"
            android:layout_width="35dp"
            android:layout_height="35dp" />
        <TextView
            android:layout_centerInParent="true"
            android:text="发现好友"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/acin_sou"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/aar"
            android:layout_width="35dp"
            android:layout_height="35dp" />
    </RelativeLayout>
    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:id="@+id/acin_yao"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:background="@drawable/a2m"
                android:layout_width="35dp"
                android:layout_height="35dp" />
            <TextView
                android:text="邀请朋友"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/acin_erwei"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:background="@drawable/ado"
                android:layout_width="35dp"
                android:layout_height="35dp" />
            <TextView
                android:text="我的二维码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/acin_sao"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:background="@drawable/adv"
                android:layout_width="35dp"
                android:layout_height="35dp" />
            <TextView
                android:text="扫一扫"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <RelativeLayout
           android:layout_marginTop="10dp"
           android:layout_width="match_parent"
           android:layout_height="40dp">
           <LinearLayout
               android:id="@+id/acin_tongxun"
               android:layout_marginLeft="10dp"
               android:layout_alignParentLeft="true"
               android:layout_width="wrap_content"
               android:layout_height="match_parent">
               <ImageView
                   android:background="@drawable/aag"
                   android:layout_width="35dp"
                   android:layout_height="35dp" />
               <TextView
                   android:layout_marginLeft="8dp"
                   android:text="手机通讯录"
                   android:layout_gravity="center_vertical"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
           </LinearLayout>
           <TextView
               android:id="@+id/acin_tongxun_state"
               android:layout_marginRight="10dp"
               android:layout_alignParentRight="true"
               android:text="未开通"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </RelativeLayout>
        <View
            android:background="#FF867E7E"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <LinearLayout
                android:id="@+id/acin_xinlang"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:background="@drawable/aak"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />
                <TextView
                    android:layout_marginLeft="8dp"
                    android:text="新浪微博"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/acin_xinlang_state"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:text="未开通"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_margin="15dp"
        android:text="推荐用户"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/acin_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
